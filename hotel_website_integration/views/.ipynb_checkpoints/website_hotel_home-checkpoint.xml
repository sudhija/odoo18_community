  <template id="website_hotel_home" name="Hotel Rooms">
    <t t-call="website.layout">
      <div class="container py-4">
        <!-- Search Form -->
        <form action="/hotel/rooms" method="get" class="row g-2 mb-3">
          <div class="col-md-3">
            <input type="date" name="checkin" t-att-value="checkin" t-att-min="checkin_min" class="form-control"/>
          </div>
          <div class="col-md-3">
            <input type="date" name="checkout" t-att-value="checkout" t-att-min="checkin" class="form-control"/>
          </div>
          <div class="col-md-2">
            <select name="guests" class="form-control">
              <option value="" disabled="disabled" t-att-selected="not guests">Number Of Persons</option>
              <t t-foreach="range(1, 6)" t-as="i">
                <option t-att-value="i" t-att-selected="guests == i"><t t-esc="i"/></option>
              </t>
            </select>
          </div>
          <div class="col-md-3">
            <select name="category_id" class="form-control">
              <option value="0" t-att-selected="not category_id">All Categories</option>
              <t t-foreach="categories" t-as="cat">
                <option t-att-value="cat['id']" t-att-selected="category_id == cat['id']">
                    <t t-esc="cat['name']"/></option>
              </t>
            </select>
          </div>
          <div class="col-md-1">
            <button class="btn btn-primary w-100" type="submit">Search</button>
          </div>
        </form>

        <!-- Rooms Grid -->
        <div class="row">
          <t t-foreach="cards" t-as="card">
            <t t-foreach="card['room']" t-as="room">
              <div class="col-md-4 mb-4">
                <div class="card shadow-sm rounded-4 overflow-hidden border-0">

                  <!-- Room Image Carousel -->
                  <div t-att-id="'roomCarousel-%s' % room.id" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
                    <div class="carousel-inner">
                      
                      <!-- Cover Image -->
                      <div class="carousel-item active">
                        <img t-att-src="'/web/image/hotel.room/%s/cover_image' % room.id if room.cover_image else '/web/static/src/img/placeholder.png'"
                             class="d-block w-100 rounded-top"
                             style="height: 250px; object-fit: cover;"
                             t-att-alt="room.name or 'Cover Image'"/>
                      </div>

                      <!-- Gallery Images -->
                      <t t-foreach="room.gallery_image_ids" t-as="img">
                        <div class="carousel-item">
                          <img t-att-src="'/web/image/website.hotel.room.image/%s/image_1920' % img.id"
                               class="d-block w-100 rounded-top"
                               style="height: 250px; object-fit: cover;"
                               t-att-alt="room.name or 'Gallery Image'"/>
                        </div>
                      </t>
                    </div>

                    <!-- Carousel Controls -->
                    <button class="carousel-control-prev" type="button" t-att-data-bs-target="'#roomCarousel-%s' % room.id" data-bs-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" t-att-data-bs-target="'#roomCarousel-%s' % room.id" data-bs-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                  </div>

                  <!-- Room Info -->
                  <div class="card-body">
                    <h5 class="card-title m-0">
                      <t t-esc="room.name"/>
                      <t t-if="room.website_category_id">
                        <span class="badge bg-info ms-2">
                          <t t-esc="room.website_category_id.display_name"/>
                        </span>
                      </t>
                    </h5>
                      <t t-if="card['available']">
                      <span class="badge bg-success">Available</span>
                    </t>
                    <t t-else="">
                      <span class="badge bg-danger">Unavailable</span>
                    </t>

                    <p class="text-muted mb-2">
                      <t t-esc="room.description or 'No description available'"/>
                    </p>

                <!-- Amenities -->
                  <div class="mb-2">
                    <t t-foreach="room.amenity_ids or []" t-as="a">
                      <span class="me-2">
                        <img t-att-src="'/web/image/hotel.amenity/%s/icon' % a.id"
                             style="height:20px;width:20px;object-fit:contain;"
                             class="me-1 rounded"/>
                        <span class="badge bg-light text-dark"><t t-esc="a.name"/></span>
                      </span>
                    </t>
                  </div>

                  <!-- Facilities -->
                  <div class="mb-2">
                    <t t-foreach="room.facility_ids or []" t-as="f">
                      <span class="badge bg-secondary me-1"><t t-esc="f.name"/></span>
                    </t>
                  </div>

                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <small>Rate per night</small>
                        <h4 class="m-0">&#8377; <t t-esc="('%.2f' % card['rate'])"/></h4>
                      </div>
                      <a t-att-href="'/hotel/room/%s/book?checkin=%s&amp;checkout=%s&amp;guests=%s' % (room.id, checkin, checkout, guests)"
                         class="btn btn-primary">Book</a>
                    </div>
                  </div>

                </div>
              </div>
            </t>
          </t>
        </div>
      </div>
    </t>
  </template>
</odoo>
